<mvc:View
	height="100%"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:mdc="sap.ui.mdc"
	xmlns:mdct="sap.ui.mdc.table">

	<f:DynamicPage id="page">
		<f:content>
		<mdc:Table
			id="table"
			header="Clothing-custom cpi error"
			p13nMode="Column,Sort,Filter"
				type="TreeTable"
				useColumnLabelsAsTooltips="true"
				width="100%"
				rowActionCount="1"
				delegate="{
					name: 'mdc/sample/delegates/JSONTreeTableDelegate',
					payload: {
						bindingPath: 'clothing>/catalog/clothing'
					}
				}">
			<mdct:Column
				propertyKey="name"
				header="Error Name"
				width="25%">
				<Text text="{clothing>name}" wrapping="true"/>
			</mdct:Column>
			<mdct:Column
				propertyKey="datetime"
				header="Date and Time"
				width="15%">
				<Text text="{clothing>datetime}"/>
			</mdct:Column>
			<mdct:Column
				propertyKey="reprocess"
				header="Reprocess"
				width="15%"
				hAlign="Center">
				<HBox justifyContent="Center" alignItems="Center" visible="{= ${clothing>datetime} !== '' &amp;&amp; ${clothing>datetime} !== undefined }">
					<Button text="Yes" type="Accept" press=".onReprocessYes" class="sapUiTinyMarginEnd"/>
					<Button text="No" type="Reject" press=".onReprocessNo"/>
				</HBox>
			</mdct:Column>
			<mdct:Column
				propertyKey="payload"
				header="XML/Payload Before Reprocess"
				width="45%">
				<VBox visible="{= ${clothing>payload} !== '' &amp;&amp; ${clothing>payload} !== undefined }">
					<Text text="{clothing>payload}" wrapping="true" class="sapUiSmallMarginBottom"/>
					<Link text="View Full Payload" press=".onViewPayload"/>
				</VBox>
			</mdct:Column>
		</mdc:Table>
		</f:content>
	</f:DynamicPage>

</mvc:View>